# Aliases can be placed here
# For a full list of active aliases, run `alias`.
#
# Example aliases
# alias name="command"
# DonÂ´t forget to reload .zshrc with "source .zshrc"
alias ls="ls --color=auto"
alias ll="ls -lsahF"
alias vim="nvim"
alias clear_history='echo "" > ~/.zsh_history & exec $SHELL -l'
alias make_backup="sh ~/Dokumente/Scripts/Linux_Scripts/backup.sh"
alias csr="sh ~/Dokumente/Scripts/Linux_Scripts/gen-csr.sh"
alias ip2hex="sh ~/Dokumente/Scripts/Linux_Scripts//IpToHex.sh"
alias active_nic="sh ~/Dokumente/Scripts/Linux_Scripts//active_nic.sh"
alias mtmux="sh ~/Dokumente/Scripts/Linux_Scripts/MPtmux.sh"
alias home_nas="sh ~/Dokumente/Scripts/Linux_Scripts//wake_home_nas.sh"
alias python=/usr/local/bin/python3
alias minicom="minicom -con"
alias update-mirrors="sudo pacman-mirrors --fasttrack=5 && pamac upgrade --force-refresh --no-aur && pamac upgrade --aur"
